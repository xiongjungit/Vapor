<nav class="pagination" role="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{pageUrl prev}}"><i class="fa fa-chevron-circle-left"></i> 更新的文章</a>
    {{/if}}
    <span class="page-number"> {{page}} of {{pages}} </span>
    {{#if next}}
        <a class="older-posts" href="{{pageUrl next}}">之前的文章 <i class="fa fa-chevron-circle-right"></i></a>
    {{/if}}
</nav>